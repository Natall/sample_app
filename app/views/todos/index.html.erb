<h1>todos</h1>

<section class="todoapp">

  <div class="new-todo">
  <%= form_for(@todo) do |f| %>
      <p class="text-field"> <%= f.text_field :item, :placeholder => "Add new item", :class => 'todo-input .form-control' %></p>
        </div>
      <!--<p> <%= f.submit "Go", :class=> 'send' %></p>-->
  <% end %>


    <% @todos.each do |todo| %>

      <%= form_for( todo, {method: :put }) do |f| %>
        <div>
         <%= f.check_box :mark, class: 'check-mark' %>
          <span class="todo-item"><%= todo.item %></span>
          <%= f.text_field :item, class: 'change-item' %>
            <%= link_to "delete", todo_path(todo), :class=>'delete', method: :delete,
                        data: { confirm: "You sure?"}%>
        </div>
      <% end %>
    <% end %>

    <span class="todo-count">
  <%= pluralize(current_user.todos.count, "item") %>
    </span>

<%= link_to "All", todos_path, class: 'button'%>
<%= link_to "Active", active_todos_path,class: 'button'%>
<%= link_to "Completed", todos_completed_path, class: 'button'%>
<%= link_to "Clear completed", delete_completed_todos_path, class: 'button'%>

    </section>

<%= javascript_include_tag('todos')%>





